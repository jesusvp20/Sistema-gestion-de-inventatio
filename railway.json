{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd inventarioBackend && composer install --optimize-autoloader --no-dev",
    "watchPatterns": [
      "inventarioBackend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd inventarioBackend && php artisan serve --host=0.0.0.0 --port=$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

